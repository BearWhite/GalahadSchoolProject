{% extends "BiblioEntityBundle:Default:layout.html.twig" %}

{% block content %}
    <div class="page-title"><h1>Liste des Facultés</h1></div>

{% include 'BiblioInscriptionBundle:Default:notification.html.twig' %}

    <table class="table table-hover table-condensed table-bordered">
    <tr>
        <th>Nom</th>
        <th>Actions</th>
    </tr>
        {% for entity in entities %}
    <tr>
        <td>{{ entity.nom }}</td>
        <td><a href="{{ path('biblio_inscription_faculte_edit', { 'id': entity.id }) }}" name="Modifier" class="btn btn-xs btn-success" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a> <a href="{{ path('biblio_inscription_faculte_delete', { 'id': entity.id }) }}" name="Delete" class="btn btn-xs btn-danger" role="button" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a></td>
    </tr>


        {% endfor %}
     </table>

    <a class="btn btn-primary" role="button" href="{{ path('biblio_inscription_faculte_new') }}"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une faculté </a>
<br><br>
   <a class="btn btn-default" role="button" href="{{ path('biblio_inscription_homepage') }}"> <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Retour Accueil</a>
    {% endblock %}
