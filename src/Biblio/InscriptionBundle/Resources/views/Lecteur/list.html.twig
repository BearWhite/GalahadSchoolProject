{% extends "BiblioEntityBundle:Default:layout.html.twig" %}

{% block content %}
    <div class="page-title"><h1>Liste des lecteurs inscrits</h1></div>

{% include 'BiblioInscriptionBundle:Default:notification.html.twig' %}

    <table class="table table-hover table-condensed table-bordered">
    <tr>
        <th>Pseudonyme</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Facult√©</th>
        <th>Cycle</th>
        <th>Actions</th>
    </tr>
        {% for entity in entities %}
    <tr>
        <td>{{ entity.username }}</td>
        <td>{{ entity.nom }}</td>
        <td>{{ entity.prenom }}</td>
        <td>{{ entity.faculte.nom }}</td>
        <td>{{ entity.cycle.nom }}</td>
        <td><a href="{{ path('biblio_inscription_lecteur_edit', { 'id': entity.id }) }}" name="Modifier" class="btn btn-xs btn-success" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a> <a href="{{ path('biblio_inscription_lecteur_delete', { 'id': entity.id }) }}" name="Delete" class="btn btn-xs btn-danger" role="button" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a></td>
    </tr>

