        {% endfor %}
     </table>

    <a class="btn btn-primary" role="button" href="{{ path('biblio_inscription_lecteur_new') }}"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un lecteur </a>
