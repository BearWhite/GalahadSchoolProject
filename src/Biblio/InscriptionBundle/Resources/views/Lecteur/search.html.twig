{% extends "BiblioEntityBundle:Default:layout.html.twig" %}

{% block content %}

    <div class="page-title"><h1>Rechercher un inscrit</h1></div>
    <form action="{{ path('biblio_inscription_lecteur_search') }}" method="post">
      <label for="search">Inscrit :</label>
      <input type="text" id="search" name="_search" value="{{ last_search }}" class='form-control'/>
      <button type="submit"  class='marge-button btn btn-success'>Rechercher</button>
    </form>
 <br>
 {% if entities is defined %}
    <div class="page-title"><h1>Recherche: {{ last_search }}</h1></div>

   <table class="table table-hover table-condensed table-bordered">
    <tr>
        <th>Pseudonyme</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Facult√©</th>
        <th>Cycle</th>
        <th>Actions</th>
    </tr>
        {% for entity in entities %}
    <tr>
        <td>{{ entity.username }}</td>
        <td>{{ entity.nom }}</td>
        <td>{{ entity.prenom }}</td>
        <td>{{ entity.faculte.nom }}</td>
        <td>{{ entity.cycle.nom }}</td>
        <td><a href="{{ path('biblio_inscription_lecteur_edit', { 'id': entity.id }) }}" name="Modifier" class="btn btn-xs btn-success" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modifier</a> <a href="{{ path('biblio_inscription_lecteur_delete', { 'id': entity.id }) }}" name="Delete" class="btn btn-xs btn-danger" role="button" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer</a></td>
    </tr>

<!--<a href="{{ path('biblio_inscription_lecteur_edit', { 'id': entity.id }) }}">{{ entity.nom }} {{ entity.prenom }}</a>-->

        {% endfor %}
     </table>
{% endif %}
{% endblock %}